@model IEnumerable<MvcApp.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateorEdit" class="btn btn-primary"><i class="fa fa-plus"></i> Create New</a>
</p>
<table class="table table-striped">
    <thead class="table-heading">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventEndDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutoClose)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventEndDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AutoClose)
                </td>
                <td>
                    <a href="@Url.Action("CreateorEdit","Event", new { id = item.EventID })" class="btn btn-outline-primary"><i class="fa fa-pencil"></i> Edit</a> 
                    <a href="@Url.Action("Details","Event", new { id = item.EventID })" class="btn btn-outline-info"><i class="fa fa-info"></i> Details</a> 
                    <a onclick="Delete(@item.EventID)" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('NameLess Application', 'Are you sure you want to Delete this record?', function () {
                window.location.href = '@Url.Action("Delete", "Event")/' + id;
            },null)
        }
    </script>
}